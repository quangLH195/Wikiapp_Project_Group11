<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wikiapp.EncyclopediaActivity"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_encyclopediaactivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">
            <FrameLayout
                android:id="@+id/ctl_encyclopediaactivity_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ctl_encyclopediaactivity_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/ctl_encyclopediaactivity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:textAppearance="@style/ctl_title"
                    android:layout_margin="@dimen/margin_ctl_title" />
            </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_encyclopediaactivity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackground">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_gravity="center"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cardview"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="20dp">
                    <FrameLayout
                        android:id="@+id/frame_header1_encyclopedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/encyclopedia_txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:text="@string/header1_encyclopedia"
                            android:textStyle="bold"
                            android:layout_gravity="start|center"/>
                        <TextView
                            android:id="@+id/encyclopedia_header1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_gravity="end|center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frame_header2_encyclopedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/encyclopedia_txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:text="@string/header2_encyclopedia"
                            android:textStyle="bold"
                            android:layout_gravity="start|center"/>
                        <TextView
                            android:id="@+id/encyclopedia_header2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_gravity="end|center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frame_header3_encyclopedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/encyclopedia_txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:text="@string/header3_encyclopedia"
                            android:textStyle="bold"
                            android:layout_gravity="start|center"/>
                        <TextView
                            android:id="@+id/encyclopedia_header3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_gravity="end|center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frame_header4_encyclopedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/encyclopedia_txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:text="@string/header4_encyclopedia"
                            android:textStyle="bold"
                            android:layout_gravity="start|center"/>
                        <TextView
                            android:id="@+id/encyclopedia_header4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_gravity="end|center"/>
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/frame_founder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/encyclopedia_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text_title_appearance"
                    android:textStyle="bold"
                    android:text="@string/founder_title_encyclopedia"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CardViewStyle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardview"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_encyclopedia_founder"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/encyclopedia_founder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginTop="@dimen/margin_text"
                            android:layout_marginBottom="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/encyclopedia_txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text_title_appearance"
                    android:textStyle="bold"
                    android:text="@string/description_title_encyclopedia"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CardViewStyle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardview"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/encyclopedia_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_margin="@dimen/margin_text"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/encyclopedia_txt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text_title_appearance"
                    android:textStyle="bold"
                    android:text="@string/gallery_title_encyclopedia"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/gallery_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CardViewStyle"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardview"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/encyclopedia_txt8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/text_appearance"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textStyle="italic"
                            android:text="@string/galerry_hint_encyclopedia"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/detail_encyclopedia"
                android:layout_gravity="center"
                android:textAppearance="@style/text_detail_appearance"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginBottom="5dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundReference"
                android:layout_marginTop="10dp">
                <com.wikiapp.HoneyguideTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text_reference_appearance"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:text="@string/encyclopedia_reference1"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
